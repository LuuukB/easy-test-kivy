RelativeLayout:
    Button:
        id: back_btn_layout
        pos_hint: {"x": 0.0, "top": 1.0}
        background_color: 0, 0, 0, 0
        size_hint: 0.1, 0.1
        background_normal: "assets/back_button.png"
        on_release: app.on_exit_btn()
        Image:
            source: "assets/back_button_normal.png" if self.parent.state == "normal" else "assets/back_button_down.png"
            pos: self.parent.pos
            size: self.parent.size
    Button:
        id: can_send_btn
        pos_hint: {"x": 0.5, "top": 1.0}
        text: "0x301"
        color: 1,1,1,1
        size_hint: 0.1, 0.1
        on_release: app.send_0x301()

    Label:
        id: counter_label
        text: "Tic: 0"
        font_size: 40

    Image:
        id: image
        size_hint: 0.5, 0.5

    Image:
        id: image3
        size_hint: 0.5, 0.5
        pos_hint: {"x": 0, "top": 1.0}

    Image:
        id: image4
        size_hint: 0.5, 0.5
        pos_hint: {"x": 0.5, "top": 0.5}

    Image:
        id: image2
        size_hint: 0.5, 0.5
        pos_hint: {"x": 0.5, "top": 1.0}

    VirtualJoystickWidget:
        id: joystick
        size_hint: 0.5, 0.5
        pos_hint: {"x": 0.5, "top": 0.5}


